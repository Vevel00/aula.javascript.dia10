7) <?php
$produtos = [
    ["nome" => "Teclado", "preco" => 120.50, "quantidade" => 10],
    ["nome" => "Mouse", "preco" => 80.00, "quantidade" => 15],
    ["nome" => "Monitor", "preco" => 950.75, "quantidade" => 5],
    ["nome" => "Cadeira Gamer", "preco" => 1350.00, "quantidade" => 2],
];

$totalGeral = 0;

echo "<h3>Relatório de Estoque</h3>";

foreach ($produtos as $produto) {
    $subtotal = $produto["preco"] * $produto["quantidade"];
    echo "Produto: {$produto['nome']}<br>";
    echo "Preço: R$ " . number_format($produto["preco"], 2, ",", ".") . "<br>";
    echo "Quantidade: {$produto['quantidade']}<br>";
    echo "Subtotal: R$ " . number_format($subtotal, 2, ",", ".") . "<br><br>";

    $totalGeral += $subtotal;
}

echo "<strong>Valor total em estoque: R$ " . number_format($totalGeral, 2, ",", ".") . "</strong>";
?>
---------------------------------------------------------------------------------------------------------
