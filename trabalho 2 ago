5) <?php
$leituras = [10, 12, 15, 15, 18, 18, 20];
$anterior = null;

foreach ($leituras as $valor) {
    if ($valor === $anterior) {
        echo "Primeiro valor repetido consecutivamente: $valor";
        break;
    }
    $anterior = $valor;
}
?>

