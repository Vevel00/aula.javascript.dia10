11) <?php
$pontos = [85, 92, 78, 100, 67, 89];

$maior = $pontos[0];
$menor = $pontos[0];

foreach ($pontos as $p) {
    if ($p > $maior) {
        $maior = $p;
    }
    if ($p < $menor) {
        $menor = $p;
    }
}

echo "Maior pontuação: $maior<br>";
echo "Menor pontuação: $menor";
?>
-----------------------------------------------------------------------------------------------------------------
12) <?php
$alunos = [
    "Ana"   => [true, true, true, false, true],
    "João"  => [true, false, false, true, false],
    "Maria" => [true, true, true, true, true],
    "Pedro" => [false, true, true, true, false],
];

echo "<h3>Alunos com frequência ≥ 75%</h3>";

foreach ($alunos as $nome => $presencas) {
    $totalAulas = count($presencas);
    $presentes = 0;

    foreach ($presencas as $p) {
        if ($p) {
            $presentes++;
        }
    }

    $percentual = ($presentes / $totalAulas) * 100;

    if ($percentual >= 75) {
        echo "$nome — " . number_format($percentual, 1, ",", ".") . "%<br>";
    }
}
?>
-------------------------------------------------------------------------------------------------------------------
13) <?php
$pedidos = [
    ["total" => 250.00, "status" => "pago"],
    ["total" => 120.50, "status" => "pendente"],
    ["total" => 340.75, "status" => "pago"],
    ["total" => 89.90,  "status" => "cancelado"],
    ["total" => 150.00, "status" => "pago"],
];

$soma = 0;
$contagem = 0;

foreach ($pedidos as $pedido) {
    if ($pedido["status"] === "pago") {
        $soma += $pedido["total"];
        $contagem++;
    }
}

if ($contagem > 0) {
    $ticketMedio = $soma / $contagem;
    echo "Ticket médio dos pedidos pagos: R$ " . number_format($ticketMedio, 2, ",", ".");
} else {
    echo "Nenhum pedido pago.";
}
?>
----------------------------------------------------------------------------------------------------------------------
14) <?php
$codigos = [200, 404, 200, 404, 500, 404, 200, 404];

$encontrado = false;

for ($i = 0; $i < count($codigos) - 2; $i++) {
    if ($codigos[$i] === 404 && $codigos[$i+1] === 200 && $codigos[$i+2] === 404) {
        $encontrado = true;
        break;
    }
}

if ($encontrado) {
    echo "Sequência 404, 200, 404 encontrada!";
} else {
    echo "Sequência não encontrada.";
}
?>
-----------------------------------------------------------------------------------------------------------------------
15) <?php
$livros = [
    ["titulo" => "O Pequeno Príncipe", "disponivel" => true],
    ["titulo" => "1984", "disponivel" => true],
