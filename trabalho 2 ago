1) <?php
for ($i = 1; $i <= 30; $i++) {
    echo $i . PHP_EOL;
}
?>
---------------------------------------------------------------------------------------

2) <?php
$numero = 5; // Você pode alterar esse valor para qualquer número desejado
$contador = 1;

while ($contador <= 10) {
    echo "$numero x $contador = " . ($numero * $contador) . "<br>";
    $contador++;
}
?>
-----------------------------------------------------------------------------------------
3) <?php
$soma = 0;

for ($i = 1; $i <= 100; $i++) {
    if ($i % 2 == 0) {
        $soma += $i;
    }
}

echo "A soma de todos os números pares entre 1 e 100 é: $soma";
?>
-----------------------------------------------------------------------------------------------
