9) <?php
$vendas = [120, 80, 200, 150, 90, 50];

$total = 0;
$dias = 0;

foreach ($vendas as $valor) {
    $total += $valor;
    $dias++;

    if ($total >= 500) {
        break; 
    }
}

echo "Meta de R$ 500 atingida em $dias dia <br>";
echo "Total acumulado: R$ " . number_format($total, 2, ",", ".");
?>
